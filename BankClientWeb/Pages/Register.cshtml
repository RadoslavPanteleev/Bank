@page
@model BankClientWeb.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="content">


    <h3>Register</h3>
    <hr />

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.StatusMessage
        </div>
    }

    @using (Html.BeginForm("Register", "Register", FormMethod.Post))
    {
        <div class="form-group">
            <label for="validationDefaultUsername" class="form-label">Username</label>
            <div class="input-group">
                <input type="text" class="form-control" asp-for="UserName" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required>
            </div>
        </div>
        <div class="form-group">
            <label for="validationDefaultUsername" class="form-label">First name</label>
            <div class="input-group">
                <input type="text" class="form-control" asp-for="FirstName" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required>
            </div>
        </div>
        <div class="form-group">
            <label for="validationDefaultUsername" class="form-label">Last name</label>
            <div class="input-group">
                <input type="text" class="form-control" asp-for="LastName" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required>
            </div>
        </div>
        <div class="form-group">
            <label for="validationDefaultUsername" class="form-label">Address</label>
            <div class="input-group">
                <input type="text" class="form-control" asp-for="Address" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2">
            </div>
        </div>
        <br />
        <div class="form-group">
            <label for="validationDefault01" class="form-label">Password</label>
            <div class="input-group">
                <input type="password" class="form-control" asp-for="Password" id="validationDefault01" required>
            </div>
        </div>
        <div class="form-group">
            <label for="validationDefault01" class="form-label">Repeat password</label>
            <div class="input-group">
                <input type="password" class="form-control" asp-for="RepeatedPassword" id="validationDefault01" required>
            </div>
        </div>
        <div class="form-group">
            <label for="validationDefaultUsername" class="form-label">Account number</label>
            <div class="input-group">
                <input type="text" class="form-control" asp-for="AccountNumber" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Register</button>
    }

</div>
