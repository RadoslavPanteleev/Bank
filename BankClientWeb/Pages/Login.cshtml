@page
@model BankClientWeb.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="content">


    <h3>Login</h3>
    <hr />

@using (Html.BeginForm("Login", "Login", FormMethod.Post))  
{  
        <div class="form-group">
            <label for="validationDefaultUsername" class="form-label">Username</label>
            <div class="input-group">
              <input type="text" class="form-control" id="validationDefaultUsername"  aria-describedby="inputGroupPrepend2" required>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label for="validationDefault01" class="form-label">Password</label>
            <div class="input-group">
                <input type="password" class="form-control" id="validationDefault01" required>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Login</button>
        <hr />
        <button type="button" class="btn btn-link" onclick="window.location.href = '/Register'">Signup</button>
}

</div>
